<h1><%= question_header(@question) %></h1>

<%= form_with model: [@test, @question], local: true do |form| %>
  <div class="field">
    <%= form.label :body, "Текст вопроса" %>
    <%= form.text_field :body, id: :question_body %>
  </div>

  <%= link_to "Вернуться", admin_test_path(@question.test), class: "button" %>
  <%= form.submit submit_text, class: "button primary" %>
<% end %>

<%= render 'shared/errors', resource: @question %>
