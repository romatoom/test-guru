<h1><%= question_header(@question) %></h1>

<%= form_with model: [@test, @question], local: true do |form| %>
  <div class="form__item">
    <%= form.label :body, "Текст вопроса" %>
    <%= form.text_field :body, id: :question_body, class: "form__field" %>
  </div>

  <%= link_to "Вернуться", test_path(@question.test), class: "button" %>
  <%= form.submit submit_text, class: "button primary" %>
<% end %>

<%= render 'shared/errors', error: @error, resource: @question %>
