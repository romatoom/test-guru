    <header>
      <div class="container">
        <a class="logo" href="<%= root_path %>">TestGuru</a>

        <div class="space"></div>

        <div class="auth_block">
        <% if logged_in? %>
          <span class="login-at">Вы вошли, как <strong><%= current_user.name %></strong></span>
          <a href="<%= logout_path %>" class="button small">Выйти</a>
        <% else %>
          <a href="<%= login_path %>" class="button small">Войти</a>
          <a href="<%= signup_path %>" class="button small">Зарегистрироваться</a>
        <% end %>
        </div>
      </div>
    </header>
