<% if resource&.errors&.any? %>
  <div
    id="error_explanation"
    class="alert alert-danger mb"
    data-resource-id="<%= resource.id %>"
    role="alert"
  >
    <h2>
      <%= t("activerecord.errors.validation", count: resource.errors.count, resource: resource.class.model_name.human) %>
    </h2>

    <hr>

    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
