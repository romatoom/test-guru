<% if resource.errors.any? %>
  <div id="error_explanation" class="mb">
    <h2>
      <%= t("activerecord.errors.validation", count: resource.errors.count, resource: resource.class.model_name.human) %>
    </h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
