<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="space"></div>
        <% if logged_in? %>
          <span class="login-at">Вы вошли, как <strong><%= current_user.name %></strong></span>
        <% end %>
      </div>
    </header>

    <section>
      <div class="container">
        <%= yield %>
      </div>
    </section>

    <%= render 'shared/footer' %>
  </body>
</html>
