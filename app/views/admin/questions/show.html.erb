<h1><%= t(".title", question_title: @question.body) %></h1>

<div class="mb-5">
  <p>
    <%= t(".description", test_title:@question.test.title, test_level: @question.test.level).html_safe %>
  </p>
</div>

<h2><%= t(".answer_options") %></h2>

<% if @question.answers.any? %>
  <table class="table table-bordered table-striped table-hover mb-5">
    <thead>
      <tr>
        <th><%= t("common.questions.answer_text") %></th>
        <th><%= t("common.questions.true_answer") %>?</th>
        <th><%= t("common.actions") %></th>
      </tr>
    </thead>

    <tbody>
      <%= render @question.answers %>
    </tbody>
  </table>
<% else %>
  <p class="mb-5"><%= t(".no_answers") %></p>
<% end %>

<br>

<%= link_to t("common.back"), admin_test_path(@question.test), class: "btn btn-secondary" %>
<%= link_to t(".add_answer"), new_admin_question_answer_path(@question), class: "btn btn-success" %>
