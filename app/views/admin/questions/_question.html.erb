<tr>
  <td class="text-align-right">
    <%= question.id %>
  </td>
  <td>
    <%= question.body %>
  </td>
  <td>
    <%= link_to "Просмотр", admin_question_path(question), class: "button small" %>
  </td>
  <td>
    <%= link_to "Редактировать", edit_admin_question_path(question), class: "button primary small" %>
  </td>
  <td>
    <%= link_to "Удалить",
                admin_question_path(question),
                method: :delete,
                disabled: question.answers.any?,
                class: "button small danger",
                data: { confirm: "Вы действительно хотите удалить вопрос?" } %>
  </td>
</tr>
