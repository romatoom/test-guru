<h1>Тест "<%= @test.title %>"</h1>

<div class="mb">
  <p>
    <strong>Уровень сложности:</strong>
    <%= @test.level %>
  </p>

  <p>
    <strong>Количество вопросов:</strong>
    <%= @test.questions.count %>
  </p>

  <p>
    <strong>Категория:</strong>
    <%= @test.category.title %>
  </p>

  <p>
    <strong>Автор:</strong>
    <%= @test.author.fullname %>
  </p>
</div>

<h2>Вопросы теста</h2>

<% if @test.questions.any? %>
<table class="mb">
  <thead>
    <tr>
      <th class="text-align-right">
        ID
      </th>
      <th>
        Название
      </th>
      <th colspan="3" class="text-align-center">
        Действия
      </th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'admin/questions/question', collection: @test.questions %>
  </tbody>
</table>
<% else %>
<p class="mb">В тесте пока нет вопросов</p>
<% end %>

<div>
  <%= link_to "Добавить вопрос", new_admin_test_question_path(@test), class: "button success mb" %>
</div>

<div>
  <%= link_to 'Вернуться', admin_tests_path, class: "button" %>
  <%= link_to 'Редактировать', edit_admin_test_path(@test), class: "button primary" %>
</div>

