<h1>Все тесты</h1>

<% if @tests.any? %>
<table class="mb">
  <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th class="text-align-center">Уровень сложности</th>
      <th>Категория</th>
      <th>Автор</th>
      <th class="text-align-center">Количество вопросов</th>
      <th colspan="4" class="text-align-center">Действия</th>
    </tr>
  </thead>

  <tbody>
    <%= render @tests %>
  </tbody>
</table>
<% else %>
<p class="mb">Ещё не создан ни один тест</p>
<% end %>

<br>

<%= link_to 'Создать тест', new_admin_test_path, class: "button success" %>
